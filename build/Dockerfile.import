# build/Dockerfile.import
# IP Import Tool - One-off data import utility

# Stage 1: Build
FROM golang:1.24-alpine AS builder

RUN apk add --no-cache git ca-certificates tzdata

WORKDIR /app

# Copy go mod files first for better caching
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

# Build import binary
RUN CGO_ENABLED=0 GOOS=linux GOARCH=amd64 go build \
    -ldflags="-w -s" \
    -o /app/bin/import \
    ./cmd/import

# Stage 2: Runtime
FROM alpine:3.19

RUN apk add --no-cache ca-certificates tzdata

# Create non-root user
RUN addgroup -g 1000 animetop && \
    adduser -u 1000 -G animetop -s /bin/sh -D animetop

WORKDIR /app

# Copy binary from builder
COPY --from=builder /app/bin/import /app/import

# Copy data directory (if exists)
COPY --from=builder /app/data/ /app/data/

# Set ownership
RUN chown -R animetop:animetop /app

USER animetop

# Default command (show help)
ENTRYPOINT ["/app/import"]
CMD ["-help"]
